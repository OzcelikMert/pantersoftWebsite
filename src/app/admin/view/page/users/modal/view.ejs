<div class="modal fade modal-view" id="modal_view" tabindex="-1" aria-hidden="true">
    <form class="text-capitalize">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <%=lang.user_info%>
                        <a href="javascript:void(0);" function="open_edit"><span class="badge bg-warning"><%=lang.edit%></span></a>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-12">
                            <div class="card p-3 py-4">
                                <div class="text-center">
                                    <img width="200" class="rounded-circle" function="image">
                                </div>
                                <div class="text-center mt-3">
                                    <h5 class="mt-2 mb-0" >
                                        <span function="name"></span> <span function="surname"></span>
                                    </h5>
                                    <span function="type_name"></span>
                                    <div class="px-4 mt-1">
                                        <p class="fonts" function="comment"></p>
                                    </div>
                                    <ul class="social-list text-primary">
                                        <li>
                                            <a function="facebook" target="_blank">
                                                <i class="fa bi-facebook"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a function="twitter" target="_blank">
                                                <i class="fa bi-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a function="gmail" target="_blank">
                                                <i class="fa bi-google"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a function="linkedin" target="_blank">
                                                <i class="fa bi-linkedin"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a function="instagram" target="_blank">
                                                <i class="fa bi-instagram"></i>
                                            </a>
                                        </li>
                                    </ul>
                                    <div function="ban_info">
                                        <h4 class="text-danger"><%=lang.banned_user%></h4>
                                        <b><%=lang.banned_date%> </b>
                                        <p class="fonts" function="ban_date"></p>
                                        <b><%=lang.end_date%></b>
                                        <p class="fonts" function="ban_date_end"></p>
                                        <b><%=lang.comment%> </b>
                                        <div class="px-4 mt-1">
                                            <p class="fonts" function="ban_comment"></p>
                                        </div>
                                    </div>
                                    <div class="buttons mt-5">
                                        <a class="btn btn-outline-primary px-4" function="email" target="_blank">
                                            <i class="bi bi-envelope-fill"></i> <%=lang.message%> 
                                        </a>
                                        <a class="btn btn-primary px-4 ms-3" function="phone" target="_blank">
                                            <i class="bi bi-telephone-fill"></i> <%=lang.contact%> 
                                        </a>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-6 mt-3">
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="stats-icon purple">
                                                        <i class="iconly-boldShow"></i>
                                                    </div>
                                                </div>
                                                <div class="col-8">
                                                    <h6 class="text-muted font-semibold"><%=lang.profile_views%></h6>
                                                    <h6 class="font-extrabold mb-0">0</h6>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mt-3">
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="stats-icon blue">
                                                        <i class="iconly-boldChat"></i>
                                                    </div>
                                                </div>
                                                <div class="col-8">
                                                    <h6 class="text-muted font-semibold"><%=lang.comments%></h6>
                                                    <h6 class="font-extrabold mb-0">0</h6>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mt-3">
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="stats-icon green">
                                                        <i class="iconly-boldDocument"></i>
                                                    </div>
                                                </div>
                                                <div class="col-8">
                                                    <h6 class="text-muted font-semibold"><%=lang.blogs%></h6>
                                                    <h6 class="font-extrabold mb-0">0</h6>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mt-3">
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="stats-icon red">
                                                        <i class="iconly-boldWork"></i>
                                                    </div>
                                                </div>
                                                <div class="col-8">
                                                    <h6 class="text-muted font-semibold"><%=lang.portfolios%></h6>
                                                    <h6 class="font-extrabold mb-0">0</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </form>
</div>